<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ipvc.estg.projetofinal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetoFinal">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenu"/>
        <activity android:name=".SensorHum" android:parentActivityName="ipvc.estg.projetofinal.MainMenu"/>
        <activity android:name=".SensorLum" android:parentActivityName="ipvc.estg.projetofinal.MainMenu"/>
        <activity android:name=".SensorTemp" android:parentActivityName="ipvc.estg.projetofinal.MainMenu"/>
    </application>

</manifest>